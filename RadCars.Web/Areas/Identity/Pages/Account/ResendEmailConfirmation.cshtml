@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Повторно изпращане на потвърждение";
}

<div class="d-flex flex-column align-items-center text-center">
    <h2>@ViewData["Title"]</h2>
    <h4 class="mt-3 mb-1">Въведете електронна си поща</h4>
</div>
<div class="d-flex flex-column align-items-center row mt-4">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 mt-3 btn btn-lg btn-primary">Изпрати</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
