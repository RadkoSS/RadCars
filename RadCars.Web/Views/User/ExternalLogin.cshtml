@model ExternalRegistrationInputModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="text-center d-flex flex-column align-items-center">
    <h2 id="external-login-title">Регистрация с @ViewData["ProviderDisplayName"] акаунт.</h2>
    <p id="external-login-description" class="fs-4 mt-3">
        За да завършите регистрацията си, трябва да попълните следната информация:
    </p>
</div>

<div class="row mt-3">
    <div class="col-md-4 offset-md-4">
        <form id="registerForm" asp-controller="User" asp-action="Confirmation" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-2">
                <input asp-for="@Model.Email" class="form-control" autocomplete="email" />
                <label asp-for="@Model.Email" class="form-label" class="form-label"></label>
                <input type="hidden" asp-for="@Model.ReturnUrl"/>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="@Model.UserName" class="form-control" />
                <label asp-for="@Model.UserName" class="form-label"></label>
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="@Model.PhoneNumber" class="form-control" />
                <label asp-for="@Model.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="@Model.FirstName" class="form-control" />
                <label asp-for="@Model.FirstName" class="form-label"></label>
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="@Model.LastName" class="form-control" />
                <label asp-for="@Model.LastName" class="form-label"></label>
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>

            <recaptcha-v3 form-id="registerForm" action="submit" class="w-100 btn btn-lg btn-primary mt-3">Регистрация с @ViewData["ProviderDisplayName"]</recaptcha-v3>

        </form>
    </div>
</div>

@section Scripts {
    <recaptcha-script />
    <partial name="_ValidationScriptsPartial" />
}
