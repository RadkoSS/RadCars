@model LoginFormModel

@{
    ViewData["Title"] = "Влизане в профил";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <form id="account" method="post">
                <h1 class="text-center">Влезте в профила си</h1>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-2">
                    <input asp-for="@Model.UserNameOrEmailAddress" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="@Model.UserNameOrEmailAddress" class="form-label"></label>
                    <span asp-validation-for="@Model.UserNameOrEmailAddress" class="text-danger"></span>
                </div>
                <div class="form-floating mb-2">
                    <input asp-for="@Model.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="@Model.Password" class="form-label"></label>
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="@Model.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="@Model.RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Влез</button>
                </div>
                <div class="mt-3">
                    <p class="d-flex flex-column align-items-center">
                        Нямате профил?
                        <a asp-controller="User" asp-action="Register" class="page-link mt-2">Регистрирайте се!</a>
                    </p>
                </div>
            </form>
        </section>
        @if (Model.ExternalLogins.Any())
        {
            <section class="text-center">

                <h3>Можете да влезете и чрез:</h3>
                <hr/>
                <div>
                    <form id="external-account" asp-controller="User" asp-action="ExternalLogin" method="post">
                        @foreach (var provider in Model.ExternalLogins)
                        {
                            <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name">
                                @provider.DisplayName
                            </button>
                        }
                    </form>
                </div>

            </section>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}