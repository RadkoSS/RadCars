@model IEnumerable<AllListingViewModel>

<div class="container">
    <h2 class="text-center text-black mt-4 mb-5">@ViewData["Title"]</h2>
    <div class="row">
        @foreach (var listing in Model)
        {
            <div class="col-md-4 d-flex align-items-stretch">
                <div class="card mb-4 shadow-sm w-100">
                    <a asp-controller="Listing" asp-action="Details" asp-route-listingId="@listing.Id"><img class="card-img-top w-100" src="@listing.Thumbnail.Url" alt="Card image cap" style="height: 25vh; object-fit: cover;"></a>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@listing.Title</h5>
                        <p class="card-text flex-grow-1">
                            <ul class="list-unstyled">
                                <li>@listing.CarMakeName @listing.CarModelName</li>
                                <li>Година на производство: @listing.Year г.</li>
                                <li>Населено място: @listing.City.Name</li>
                                <li>Двигател: @listing.EngineModel</li>
                                <li>Пробег: @listing.Mileage км.</li>
                                <li class="mt-3">Цена: @listing.Price лв.</li>
                            </ul>
                        </p>
                        <div class="mt-auto">
                            <form asp-controller="Listing" asp-action="Details" asp-route-listingId="@listing.Id">
                                <input type="submit" class="btn btn-sm btn-outline-info text-black" value="Разгледай обявата" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>