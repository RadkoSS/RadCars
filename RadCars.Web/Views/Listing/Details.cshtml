@inject SignInManager<ApplicationUser> SignInManager

@using RadCars.Web.Infrastructure.Extensions
@model ListingDetailsViewModel

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>@Model.Title</h1>
            <p class="text-muted">Обявата е качена от @Model.CreatorName, Година на производство: @Model.Year</p>
            <hr />
            <p>@Model.Description</p>
        </div>
    </div>

    <div class="row">
        @foreach (var picture in Model.Pictures)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <a href="javascript:void(0)">
                        <img class="card-img-top" src="@picture.Url" alt="Снимката не беше заредена правилно...">
                    </a>
                </div>
            </div>
        }
    </div>

    @if (SignInManager.IsSignedIn(User) && string.Equals(Model.CreatorId, User.GetId()!, StringComparison.CurrentCultureIgnoreCase))
    {
        @*<div class="row mt-3">
            <div class="col-12">
                <form asp-controller="Listing" asp-action="Deactivate" asp-route-listingId="@Model.Id">
                    <input type="submit" value="Деактиварай обявата" class="btn-danger" />
                </form>
            </div>
        </div>*@

        <div class="row mt-3">
            <div class="col-12">
                <a asp-controller="Listing" asp-action="ChooseThumbnail" asp-route-listingId="@Model.Id" class="btn btn-secondary">Смени снимката на обложката</a>
            </div>
        </div>
    }
</div>
