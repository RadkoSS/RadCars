@model ListingDetailsViewModel

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>@Model.Title</h1>
            <p class="text-muted">Listed by @Model.CreatorName, Year: @Model.Year</p>
            <hr />
            <p>@Model.Description</p>
        </div>
    </div>

    <div class="row">
        @foreach (var picture in Model.Pictures)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <a href="#"><img class="card-img-top" src="@picture.Url" alt=""></a>
                    <div class="card-body">
                    </div>
                </div>
            </div>
        }
    </div>
</div>