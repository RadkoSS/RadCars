@model IEnumerable<AllListingViewModel>

@{
    ViewData["Title"] = "Моите неактивни обяви";
}

<div class="container d-flex mt-3 mb-1">
    <div class="row mt-3 justify-content-center">
        <a asp-controller="Listing" asp-action="Mine" class="btn btn-outline-info text-black">Виж своите активни обяви</a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="d-flex flex-column align-items-center">
        <h1 class="mb-4">@ViewData["Title"]</h1>
        <p class="text-black mt-5 fs-4">Нямате неактивни обяви.</p>
    </div>
}
else
{
    <div class="container">
        <h1 class="text-center text-black mt-4 mb-5">@ViewData["Title"]</h1>
        <div class="row">
            @foreach (var listing in Model)
            {
                <div class="col-md-4 d-flex align-items-stretch">
                    <div class="card mb-4 shadow-sm w-100">
                        <a asp-controller="Listing" asp-action="Details" asp-route-listingId="@listing.Id"><img class="card-img-top w-100" src="@listing.Thumbnail.Url" alt="Card image cap" style="height: 25vh; object-fit: cover;"></a>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@listing.Title</h5>
                            <p class="card-text flex-grow-1">
                                <ul class="list-unstyled">
                                    <li>@listing.CarMakeName @listing.CarModelName</li>
                                    <li>Година на производство: @listing.Year г.</li>
                                    <li>Населено място: @listing.City.Name</li>
                                    <li>Двигател: @listing.EngineModel</li>
                                    <li>Пробег: @listing.Mileage км.</li>
                                    <li class="mt-3">Цена: @listing.Price лв.</li>
                                </ul>
                            </p>
                            <div class="mt-auto">
                                <form asp-controller="Listing" asp-action="Details" asp-route-listingId="@listing.Id">
                                    <input type="submit" class="btn btn-sm btn-outline-info text-black w-100" value="Разгледай обявата" />
                                </form>

                                <form asp-controller="Listing" asp-action="Reactivate" asp-route-listingId="@listing.Id" method="post">
                                    <input type="submit" class="btn btn-sm btn-outline-success text-black w-100 mt-2" value="Активирай отново обявата" />
                                </form>

                                <form asp-controller="Listing" asp-action="Delete" asp-route-listingId="@listing.Id" method="post">
                                    <input type="submit" class="btn btn-sm btn-danger text-black fw-bold w-100 mt-2" value="Изтрий обявата" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}